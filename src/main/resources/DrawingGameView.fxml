<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.DrawingGameController"
      styleClass="main-container"
      spacing="20"
      alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Jeu de Dessin" styleClass="title-label"/>

    <!-- Subtitle -->
    <Label text="Exprime ta créativité !" styleClass="subtitle-label"/>

    <!-- Canvas Zone inside ScrollPane -->
    <ScrollPane fitToWidth="true"
                fitToHeight="true"
                prefHeight="400"
                prefWidth="600"
                styleClass="scroll-pane">
        <Canvas fx:id="canvas" width="800" height="600"/>
    </ScrollPane>

    <!-- Button Actions -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="clearButton" text="Effacer" styleClass="menu-button" onAction="#handleClearCanvas"/>
        <Button fx:id="saveButton" text="Enregistrer" styleClass="menu-button" onAction="#handleSaveDrawing"/>
        <Button fx:id="colorButton" text="Changer Couleur" styleClass="menu-button" onAction="#handleChangeColor"/>
        <Button text="Retour" onAction="#handleReturnToMainMenu" styleClass="menu-button" style="-fx-background-color: #4a148c; -fx-text-fill: white;" />

    </HBox>

</VBox>