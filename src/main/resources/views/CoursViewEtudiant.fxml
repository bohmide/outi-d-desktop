<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.CoursControllerEtudiant"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #f5f7fa;">

    <!-- Header VBox -->
    <VBox spacing="10" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="← Retour"
                    onAction="#retourAccueil"
                    style="-fx-background-color: #4a6baf;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 5;
                           -fx-padding: 6 12;
                           -fx-cursor: hand;"
                    fx:id="backButton"/>

            <Label text="Espace Étudiant"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </HBox>

        <Label text="Liste des cours disponibles"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
    </VBox>

    <!-- Scrollable GridPane OUTSIDE VBox -->
    <ScrollPane fitToWidth="true" pannable="true"
                AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
                style="-fx-background-color: transparent;">
        <GridPane fx:id="gridCours" hgap="20" vgap="20" alignment="TOP_CENTER">
            <padding><Insets bottom="20" left="10" right="10"/></padding>
        </GridPane>
    </ScrollPane>

</AnchorPane>