<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.CoursControllerEtudiant"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #f5f7fa;">

    <!-- Header VBox -->
    <VBox spacing="10" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="← Retour"
                    onAction="#retourAccueil"
                    style="-fx-background-color: #4a6baf;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 5;
                           -fx-padding: 6 12;
                           -fx-cursor: hand;"
                    fx:id="backButton"/>

            <Label text="Espace Étudiant"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <ComboBox fx:id="languageCombo"
                      promptText="Langue"
                      style="-fx-pref-width: 120; -fx-pref-height: 35;"
                      HBox.hgrow="NEVER"/>
        </HBox>

        <Label text="Liste des cours disponibles"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <!-- Barre de recherche et filtres -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Rechercher un cours..."
                       style="-fx-pref-width: 250; -fx-pref-height: 35;"/>
            <ComboBox fx:id="difficultyFilter" promptText="Filtrer par difficulté"
                      style="-fx-pref-width: 150; -fx-pref-height: 35;"/>
            <ComboBox fx:id="sortComboBox" promptText="Trier par"
                      style="-fx-pref-width: 180; -fx-pref-height: 35;"/>
        </HBox>
    </VBox>

    <ScrollPane fitToWidth="true" fitToHeight="true"
                AnchorPane.topAnchor="200"
                AnchorPane.bottomAnchor="20"
                AnchorPane.leftAnchor="20"
                AnchorPane.rightAnchor="20">
        <GridPane fx:id="gridCours" hgap="20" vgap="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </GridPane>
    </ScrollPane>


    <!-- Pagination -->
    <Pagination fx:id="pagination"
                AnchorPane.topAnchor="150"
                AnchorPane.bottomAnchor="20"
                AnchorPane.leftAnchor="20"
                AnchorPane.rightAnchor="20"
                style="-fx-page-information-visible: false;"/>
</AnchorPane>