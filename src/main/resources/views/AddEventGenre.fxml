<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.time.LocalDate?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddEventGenreController">
    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="50" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Add Event Genre" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="nameField" promptText="Genre Name"/>
        <TextField fx:id="numberField" promptText="Number"/>
        <TextField fx:id="imagePathField" promptText="Image Path"/>
        <DatePicker fx:id="datePicker" promptText="Date of Creation"/>

        <Button text="Save Genre" fx:id="saveButton" maxWidth="150"/>
    </VBox>
</AnchorPane>
