<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.user.UpdateUserController"
            style="-fx-background-color: #f8f9fa;" fx:id="rootPane">

    <!-- Carte principale -->
    <VBox alignment="TOP_CENTER" spacing="20" layoutX="100" layoutY="50"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;
                -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
          prefWidth="450">

        <!-- Titre -->
        <Label text="Update User Profile" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <!-- Formulaire -->
        <VBox spacing="15" style="-fx-padding: 10 0;">
            <!-- Ligne 1 -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="firstNameField" promptText="First Name"
                           style="-fx-pref-height: 40; -fx-pref-width: 200;
                                -fx-background-radius: 5; -fx-border-radius: 5;
                                -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>
                <TextField fx:id="lastNameField" promptText="Last Name"
                           style="-fx-pref-height: 40; -fx-pref-width: 200;
                                -fx-background-radius: 5; -fx-border-radius: 5;
                                -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>
            </HBox>

            <!-- Ligne 2 -->
            <TextField fx:id="emailField" promptText="Email Address"
                       style="-fx-pref-height: 40; -fx-pref-width: 415;
                            -fx-background-radius: 5; -fx-border-radius: 5;
                            -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>

            <!-- Ligne 3 -->
            <PasswordField fx:id="passwordField" promptText="New Password (leave blank to keep current)"
                           style="-fx-pref-height: 40; -fx-pref-width: 415;
                                -fx-background-radius: 5; -fx-border-radius: 5;
                                -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>

            <!-- Ligne 4 -->
            <TextField fx:id="numTelField" promptText="Phone Number"
                       style="-fx-pref-height: 40; -fx-pref-width: 415;
                            -fx-background-radius: 5; -fx-border-radius: 5;
                            -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>
        </VBox>

        <!-- Message de statut -->
        <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-wrap-text: true;"
               maxWidth="415"/>

        <!-- Boutons -->
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
            <Button text="Save Changes" onAction="#handleUpdate"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;
                          -fx-font-size: 14px; -fx-pref-width: 180; -fx-pref-height: 40;
                          -fx-background-radius: 5; -fx-cursor: hand;"/>

            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;
                          -fx-font-size: 14px; -fx-pref-width: 180; -fx-pref-height: 40;
                          -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-cursor: hand;"/>
        </HBox>
    </VBox>
</AnchorPane>