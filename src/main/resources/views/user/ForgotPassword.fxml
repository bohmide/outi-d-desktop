<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controllers.user.ForgotPasswordController"
            style="-fx-background-color: #f5f5f5;" fx:id="rootPane">

    <VBox alignment="CENTER" spacing="20" layoutX="250" layoutY="100" prefWidth="300" prefHeight="400">
        <!-- Titre principal -->
        <Label text="Réinitialisation du mot de passe" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <!-- Champ email -->
        <VBox spacing="5">
            <Label text="Email" style="-fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Entrez votre email" prefWidth="250" prefHeight="35"/>
        </VBox>

        <!-- Bouton d'envoi de code -->
        <Button text="Envoyer le code" onAction="#sendResetCode"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 250; -fx-pref-height: 40;"/>

        <!-- Champ code de vérification -->
        <VBox spacing="5">
            <Label text="Code de vérification" style="-fx-font-weight: bold;"/>
            <TextField fx:id="codeField" promptText="Entrez le code reçu" prefWidth="250" prefHeight="35"/>
        </VBox>

        <!-- Nouveau mot de passe -->
        <VBox spacing="5">
            <Label text="Nouveau mot de passe" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="newPasswordField" promptText="Entrez votre nouveau mot de passe" prefWidth="250" prefHeight="35"/>
        </VBox>

        <!-- Bouton de réinitialisation -->
        <Button text="Réinitialiser le mot de passe" onAction="#resetPassword"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 250; -fx-pref-height: 40;"/>

        <!-- Message de statut -->
        <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-wrap-text: true;" prefWidth="250"/>
    </VBox>
</AnchorPane>