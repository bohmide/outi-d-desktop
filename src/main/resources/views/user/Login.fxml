<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controllers.user.LoginController"
            style="-fx-background-color: #f5f5f5;" fx:id="rootPane">


    <VBox alignment="CENTER" spacing="20" layoutX="250" layoutY="50" prefWidth="300" prefHeight="500">
        <!-- Titre principal -->
        <Label text="Connexion" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <!-- Champ email -->
        <VBox spacing="5">
            <Label text="Email" style="-fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Entrez votre email" prefWidth="250" prefHeight="35"/>
        </VBox>

        <!-- Champ mot de passe -->
        <VBox spacing="5">
            <Label text="Mot de passe" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" prefWidth="250" prefHeight="35"/>
        </VBox>

        <!-- Captcha -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Captcha" style="-fx-font-weight: bold;"/>
            <Label fx:id="captchaLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-background-color: #e0e0e0; -fx-padding: 10px;"/>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="captchaField" promptText="Entrez le captcha" prefWidth="150" prefHeight="35"/>
                <Button text="Rafraîchir" onAction="#refreshCaptcha" style="-fx-background-color: #bdc3c7;"/>
            </HBox>
        </VBox>

        <!-- Message d'erreur -->
        <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" />

        <!-- Bouton de connexion -->
        <Button text="Se connecter" onAction="#handleLogin"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 250; -fx-pref-height: 40;"/>

        <!-- Liens divers -->
        <Hyperlink text="Mot de passe oublié ?" onAction="#ForgotPassword" style="-fx-text-fill: #3498db;"/>

        <!-- Connexion avec Google -->
        <Button text="Se connecter avec Google" onAction="#handleGoogleLogin"
                style="-fx-background-color: #DB4437; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 250; -fx-pref-height: 40;"/>

        <!-- Lien vers inscription -->
        <Hyperlink text="Pas de compte ? S'inscrire" onAction="#goToSignup" style="-fx-text-fill: #3498db;"/>
    </VBox>

    <!-- Bouton Admin (positionné en haut à droite) -->
    <Button fx:id="adminButton" text="Panel Admin" onAction="#goToAdminPanel"
            layoutX="700" layoutY="20" style="-fx-background-color: #2c3e50; -fx-text-fill: white;"/>
</AnchorPane>