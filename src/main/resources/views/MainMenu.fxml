<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.acceuil.MainMenuController" fx:id="rootPane">
    <VBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
        </padding>

        <!-- Image logo -->
        <ImageView fitWidth="200" preserveRatio="true">
            <image>
                <Image url="@/LOGO.png"/>
            </image>
        </ImageView>

        <Text text="Bienvenue sur notre plateforme d'apprentissage !"/>

        <Button text="Compétitions" onAction="#showCompetions"/>
        <Button text="Compétitions Etudiants" onAction="#showCompetionsEtudiant"/>

        <Button text="Forum" onAction="#showForum"/>
        <Button text="Cours" onAction="#showCours"/>
        <Button text="Cours Prof" onAction="#showCoursProf"/>
        <Button text="Événements prof" onAction="#showEvents"/>
        <Button text="Événements student" onAction="#showEventStudent"/>
    </VBox>
</StackPane>