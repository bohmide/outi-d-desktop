<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controllers.AdminUsersController"
            style="-fx-background-color: #f8f9fa;" fx:id="rootPane">

    <!-- En-tête amélioré -->
    <HBox spacing="20" alignment="CENTER_LEFT"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
          prefHeight="70" style="-fx-background-color: linear-gradient(to right, #3498db, #2c3e50);
                  -fx-padding: 0 25;">
        <Label text="User Management"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>

        <Pane HBox.hgrow="ALWAYS"/>

        <Button text="Export PDF" onAction="#exportUsersToPDF"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 4;
                       -fx-cursor: hand;">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@/assets/pdf-icon.jpg"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Contenu principal -->
    <VBox spacing="20" alignment="TOP_CENTER"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Onglets améliorés -->
        <TabPane prefWidth="100" prefHeight="500" style="-fx-background-color: transparent;">
            <tabs>
                <Tab text="Users List">
                    <content>
                        <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
                            <VBox fx:id="userListContainer" spacing="10" alignment="TOP_CENTER"
                                  style="-fx-padding: 15; -fx-background-color: white; -fx-background-radius: 8;"/>
                        </ScrollPane>
                    </content>
                </Tab>

                <Tab text="Statistics">
                    <content>
                        <VBox fx:id="statistiquesPane" spacing="20" alignment="CENTER"
                              style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 8;"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
</AnchorPane>