<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.CompetitionController">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <!-- Boutons d'action -->
        <HBox spacing="10">
            <Button text="Ajouter" onAction="#ajouterCompetition"/>
            <Button text="Modifier" onAction="#modifierCompetition"/>
            <Button text="Supprimer" onAction="#supprimerCompetition"
                    style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
            <Button text="Réserver" onAction="#reserverEquipe"
                    style="-fx-background-color: #4285F4; -fx-text-fill: white;"/>
        </HBox>

        <!-- Tableau des compétitions -->
        <TableView fx:id="tableComps" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colNom" text="Nom">
                    <cellValueFactory>
                        <PropertyValueFactory property="nomComp" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="colEntreprise" text="Entreprise">
                    <cellValueFactory>
                        <PropertyValueFactory property="nomEntreprise" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colOrganisation" text="Organisation">
                    <cellValueFactory>
                        <PropertyValueFactory property="nomOrganisation" />
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="colDebut" text="Date Début">
                    <cellValueFactory>
                        <PropertyValueFactory property="dateDebut" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colFin" text="Date Fin">
                    <cellValueFactory>
                        <PropertyValueFactory property="dateFin" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colDescription" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colFichier" text="Fichier">
                    <cellValueFactory>
                        <PropertyValueFactory property="fichier" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

    </VBox>
</AnchorPane>