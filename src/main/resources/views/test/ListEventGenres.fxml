<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.tests.ListEventGenresController">
    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="50" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="List of Event Genres" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="genreTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nameColumn" text="Genre Name" prefWidth="150"/>
                <TableColumn fx:id="numberColumn" text="Number" prefWidth="100"/>
                <TableColumn fx:id="imagePathColumn" text="Image Path" prefWidth="150"/>
                <TableColumn fx:id="dateColumn" text="Date Created" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
