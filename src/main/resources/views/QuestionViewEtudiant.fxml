<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.QuestionControllerEtudiant"
            prefWidth="800" prefHeight="600">

    <top>
        <Label fx:id="lblQuizInfo" style="-fx-font-size: 18px; -fx-padding: 15px;" />
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <TableView fx:id="tableQuestions" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colQuestion" text="Question" prefWidth="300"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="colActionReponses" text="RÃ©ponses" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnRetour" text="Retour au Quiz" onAction="#retourAuxQuiz"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
