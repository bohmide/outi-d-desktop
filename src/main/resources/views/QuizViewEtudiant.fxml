<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.QuizControllerEtudiant">

    <top>
        <Label fx:id="lblChapitreInfo" style="-fx-font-size: 18px; -fx-padding: 10px;" />
    </top>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <center>
        <TableView fx:id="tableQuiz" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="colNomQuiz" text="Titre du Quiz" prefWidth="300"/>
                <TableColumn fx:id="colAction" text="Action" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnRetour" text="Retour au chapitres " onAction="#retourAuxChapitres"
                    style="-fx-background-color: #03A9F4; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
