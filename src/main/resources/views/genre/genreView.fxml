<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.genre.GenreController" spacing="10" stylesheets="@/css/Event/EventStyle.css">

    <HBox>
        <Label>Event Genre View</Label>
        <Region HBox.hgrow="ALWAYS"></Region>
        <Button text="Ajouter Genre" style="-fx-background-radius: 10" fx:id="addGenre" onAction="#handleAjouter"></Button>
    </HBox>

    <TableView fx:id="genreTable">
        <columns>
            <TableColumn fx:id="genreName" text="Nom"></TableColumn>
            <TableColumn fx:id="nbrGenre" text="nbr evenement"></TableColumn>
            <TableColumn fx:id="imagePath" text="image"></TableColumn>
            <TableColumn fx:id="dateCreation" text="date de creation"></TableColumn>
            <TableColumn fx:id="actionColumn" text="Actions"/>
        </columns>
    </TableView>

</VBox>
