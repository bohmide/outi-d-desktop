<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controller.SignupController">
    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="150" layoutY="50" prefWidth="400" prefHeight="400">
            <Label text="Sign Up" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <TextField fx:id="firstNameField" promptText="First Name" />
            <TextField fx:id="lastNameField" promptText="Last Name" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />

            <ComboBox fx:id="typeComboBox" promptText="Select Role" prefWidth="200" />

            <Label fx:id="messageLabel" textFill="green" />

            <Button text="Create Account" onAction="#handleSignup" />
            <Hyperlink text="Already have an account? Login" onAction="#goToLogin" />
        </VBox>
    </children>
</AnchorPane>
