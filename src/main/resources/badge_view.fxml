<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.BadgeController">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <top>
        <Label text="Gestion Badges" styleClass="header" BorderPane.alignment="CENTER"
               style="-fx-font-size: 24px; -fx-font-family: 'Comic Sans MS'; -fx-text-fill: #c800ff; -fx-padding: 10px;"/>
    </top>

    <center>
        <VBox spacing="20" style="-fx-background-color: #f0f8ff; -fx-padding: 20px;">
            <HBox spacing="15">
                <TextField fx:id="nameField" promptText="Nom du badge"
                           style="-fx-font-size: 14px; -fx-background-color: #fff8dc; -fx-border-color: #c800ff; -fx-border-radius: 5px;" />
                <TextField fx:id="scoreField" promptText="Score requis"
                           style="-fx-font-size: 14px; -fx-background-color: #fff8dc; -fx-border-color: #c800ff; -fx-border-radius: 5px;" />
                <TextField fx:id="iconField" promptText="Icône"
                           style="-fx-font-size: 14px; -fx-background-color: #fff8dc; -fx-border-color: #c800ff; -fx-border-radius: 5px;" />
                <Button text="Parcourir" onAction="#handleChooseIcon"
                        style="-fx-background-color: #4682b4; -fx-text-fill: white;"/>
            </HBox>

            <HBox spacing="15" alignment="center">
                <Button text="Ajouter" onAction="#handleAddBadge"
                        style="-fx-background-color: #32cd32; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;"/>
                <Button text="Modifier" onAction="#handleUpdateBadge"
                        style="-fx-background-color: #c800ff; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;"/>
            </HBox>

            <TableView fx:id="badgeTable" prefHeight="300" prefWidth="800"
                       style="-fx-background-color: #fff; -fx-border-color: #c800ff;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Nom" prefWidth="200"/>
                    <TableColumn fx:id="requiredScoreColumn" text="Score requis" prefWidth="150"/>
                    <TableColumn fx:id="iconColumn" text="Icône" prefWidth="250"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
