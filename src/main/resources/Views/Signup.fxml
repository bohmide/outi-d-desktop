<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.SignupController"
            style="-fx-background-color: #f8f9fa;" fx:id="rootPane">

    <!-- Fond bleu à gauche -->
    <Rectangle fx:id="blueBackground" width="800" height="1000" fill="#3498db"
               arcWidth="20" arcHeight="20"
               layoutX="0" layoutY="0"/>
    <!-- Fond bleu à gauche avec logo -->
    <StackPane layoutX="0" layoutY="0" prefWidth="800" prefHeight="100">
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 100;">
            <ImageView fitWidth="400" fitHeight="400" preserveRatio="true">
                <Image url="@/assets/LOGO.png"/>
            </ImageView>
            <Label text="Join us for an amazing experience " style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </StackPane>

    <!-- Formulaire à droite -->
    <VBox alignment="CENTER" spacing="20" layoutX="1000" layoutY="50" prefWidth="400" prefHeight="600"
          style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

        <Label text="Create an account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- Champs de base -->
        <VBox spacing="15" style="-fx-padding: 20 0;">
            <TextField fx:id="firstNameField" promptText="First Name"
                       style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>

            <TextField fx:id="lastNameField" promptText="Last Name"
                       style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>

            <TextField fx:id="emailField" promptText="Email"
                       style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>

            <TextField fx:id="numTelField" promptText="Phone Number"
                       style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>

            <VBox spacing="5">
                <Label text="Password Strength" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                <ProgressBar fx:id="strengthBar" prefWidth="100"/>
                <Label fx:id="strengthLabel" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            </VBox>

            <ComboBox fx:id="typeComboBox" promptText="What's your role"
                      style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;"/>
        </VBox>

        <!-- Champs spécifiques dynamiques -->
        <VBox fx:id="studentFields" spacing="15" visible="false">
            <DatePicker fx:id="birthDatePicker" promptText="Date Of Birth"
                        style="-fx-pref-height: 40; -fx-background-radius: 5;"/>
            <ComboBox fx:id="sexeComboBox" promptText="Gender"
                      style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;"/>
        </VBox>

        <VBox fx:id="profFields" spacing="15" visible="false">
            <DatePicker fx:id="interDatePicker" promptText="Date Of Interview"
                        style="-fx-pref-height: 40; -fx-background-radius: 5;"/>
            <ComboBox fx:id="interModeComboBox" promptText="Mode Of Interview"
                      style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;"/>
        </VBox>

        <VBox fx:id="parentFields" spacing="15" visible="false">
            <TextField fx:id="firstNameChildField" promptText="Child's First Name "
                       style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>
            <TextField fx:id="lastNameChildField" promptText="Child's Last Name"
                       style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>
            <DatePicker fx:id="birthdayPicker" promptText="Date Of Birth"
                        style="-fx-pref-height: 40; -fx-background-radius: 5;"/>
            <ComboBox fx:id="childGenderComboBox" promptText="Gender"
                      style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;"/>
            <ComboBox fx:id="learningDiffComboBox" promptText="Learning Difficulties ?"
                      style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;"/>
        </VBox>

        <VBox fx:id="collabFields" spacing="15" visible="false">
            <TextField fx:id="nomColField" promptText="Name Of the Association"
                       style="-fx-pref-height: 40; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 0 15;"/>
        </VBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-wrap-text: true;" maxWidth="350"/>

        <Button text="Sign Up" onAction="#handleSignup"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;
                      -fx-font-size: 14px; -fx-pref-width: 350; -fx-pref-height: 45;
                      -fx-background-radius: 5; -fx-cursor: hand;"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Alrady SignedUp ?" style="-fx-text-fill: #7f8c8d;"/>
            <Hyperlink text="Connect" onAction="#goToLogin" style="-fx-text-fill: #3498db; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>